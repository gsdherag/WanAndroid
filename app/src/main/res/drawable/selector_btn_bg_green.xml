<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_enabled="false">
        <shape>
            <corners android:bottomLeftRadius="20dp" android:bottomRightRadius="20dp" android:topLeftRadius="20dp" android:topRightRadius="20dp" />

            <solid android:alpha="0.8" android:color="@color/blue_app_unselected" />

            <padding android:bottom="10dp" android:top="10dp" />
        </shape>
    </item>
    <item android:state_pressed="true">
        <shape>
            <corners android:bottomLeftRadius="20dp" android:bottomRightRadius="20dp" android:topLeftRadius="20dp" android:topRightRadius="20dp" />

            <solid android:alpha="0.8" android:color="@color/blue_app_unselected" />

            <padding android:bottom="10dp" android:top="10dp" />
        </shape>
    </item>
    <item android:state_pressed="false">
        <shape>
            <corners android:bottomLeftRadius="20dp" android:bottomRightRadius="20dp" android:radius="10dp" android:topLeftRadius="20dp" android:topRightRadius="20dp" />

            <solid android:color="@color/blue_app" />

            <padding android:bottom="10dp" android:top="10dp" />
        </shape>
    </item>

</selector>
