<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:id="@+id/activity_guide"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <RelativeLayout
        android:id="@+id/rl_titleCenter"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/blue_app"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btn_register"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@null"
            android:text="注册"
            android:textColor="@color/white"
            android:textSize="16sp"/>

        <com.androidkun.xtablayout.XTabLayout
            android:id="@+id/home_tab_layout"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            app:xTabBackgroundColor="@color/blue_app"
            app:xTabDisplayNum="2"
            app:xTabDividerWidthWidthText="true"
            app:xTabIndicatorColor="@color/page_background"
            app:xTabIndicatorHeight="4dp"
            app:xTabMode="scrollable"
            app:xTabSelectedTextColor="@color/page_background"
            app:xTabSelectedTextSize="16sp"
            app:xTabTextBold="false"
            app:xTabTextColor="@color/blue_app_unselected"
            app:xTabTextSelectedBold="true"
            app:xTabTextSize="16sp"/>

        <Button
            android:id="@+id/btn_login"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:background="@null"
            android:text="登录"
            android:textColor="@color/white"
            android:textSize="16sp"/>

    </RelativeLayout>

    <android.support.v4.view.ViewPager
        android:layout_below="@+id/rl_titleCenter"
        android:id="@+id/home_view_pager"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    </android.support.v4.view.ViewPager>

</RelativeLayout>
